<div class="container">
  <div class="text-center">

  <%= search_form_for @q, url: tasks_path do |f| %>
    <div class="form-group my-5">
      <%= f.date_field :start_time_gteq,
                        include_blank: true %><span>〜</span>

      <%= f.date_field :start_time_lteq_end_of_day,
                        include_blank: true %>
      <%= f.submit %>
    </div>
  <% end %>

    <div class="form-group">
    <%= form_tag({controller:"tasks",action:"index"}, method: :get) do %>
      <% Tag.all.each do |t| %>
          <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
      <% end %>
      <%= submit_tag '検索' %>
    <% end %>
    </div>
  </div>

<h3>みんなのタスク</h3>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ニックネーム</th>
      <th>タスク</th>
    </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.member.nickname %></td>
      <td><%= link_to task.content, task_path(task.id) %></td>
      <td>
        <% if current_member.already_favorited?(task) %>
          <%= link_to task_favorite_path(task), method: :delete do %>
            ♥<%= task.favorites.count %>
          <% end %>

        <% else %>
          <%= link_to task_favorite_path(task), method: :post do %>
           ♡<%= task.favorites.count %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

</div>

