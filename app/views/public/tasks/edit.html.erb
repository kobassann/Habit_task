<div class="container my-5">
  <div class="text-center">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <h3>タスクの編集</h3>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="text-center">
    <div class="col-md-12 col-sm-12 col-xs-12">
  <%= form_with model: @task, local:true do |f| %>

    <div class="form-group col-xs-9">
      <%= f.label :"　日時　", class: "col-sm-1 pr-2" %>
      <%= f.datetime_select :start_time %>
    </div>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-group'>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
      <% end %>

    <div class="form-group col-xs-9">
      <%= f.label :"タスク内容", class: "col-sm-2" %>
      <%= f.text_field :content, class: "col-sm-3" %>
    </div>

    <div class="form-group col-xs-9">
      <%= f.label :"メモ", class: "col-sm-2" %>
      <%= f.text_field :memo, class: "col-sm-3" %>
    </div>

    <div class="form-group">
      <%= f.submit :"タスクを更新", class: 'btn btn-success' %>
    </div>

  <% end %>
  </div>
</div>

