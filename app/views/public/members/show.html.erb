<h3>
  <span><%= @member["nickname"] %>のタスク</span>
  <% if @member.nickname != "guestmember" %>
    <%= link_to edit_member_path, class: "btn btn-sm btn-light" do %>
    編集
    <% end %>
  <% end %>
</h3>


<%= month_calendar(events: @tasks) do |date, tasks| %>
  <%= date.day %>

  <% tasks.each do |task| %>
  <div><%= link_to task.content, task_path(task.id) %></div>
  <% end %>
<% end %>

<div class="container">
  <div class="text-center">
  <%= form_with model:@task, local:true do |f| %>

    <div class="form-group col-xs-9">
      <%= f.label :"　日時　", class: "col-sm-1 pr-2" %>
      <%= f.datetime_select :start_time %>
    </div>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-group'>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
      <% end %>

    <div class="form-group col-xs-9">
      <%= f.label :"タスク内容", class: "col-sm-2" %>
      <%= f.text_field :content, class: "col-sm-3" %>
    </div>

    <div class="form-group col-xs-9">
      <%= f.label :"メモ", class: "col-sm-2" %>
      <%= f.text_field :memo, class: "col-sm-3" %>
    </div>

    <div class="form-group">
      <%= f.submit :"タスクを登録", class: 'btn btn-success' %>
    </div>

  <% end %>
  </div>
</div>

<table class='table'>
  <thead>
    <tr>
      <th>いいね</th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
    <tr>
      <td><%= favorite.task.content %></td>
    </tr>
    <% end %>
  </tbody>
