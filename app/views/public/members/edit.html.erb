<div class="container my-5">
  <div class="text-center">
    <h3>プロフィール編集</h3>
  </div>
</div>

<div class="container">
  <div class="text-center">
<%= form_with model: @member, url: member_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :nickname %>
  </div>

  <div class="form-group">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.submit :"変更を保存", class: "btn btn-sm btn-success" %>
  </div>

<% end %>
  <div class="form-group">
    <%= link_to "退会する", members_unsubscribe_path, class: "btn btn-sm btn-danger" %>
  </div>

  </div>
</div>