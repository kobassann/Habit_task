<div class="container my-5">
  <div class="text-center">
    <h4>会員一覧</h4>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= link_to member.nickname, admin_member_path(member.id) %></td>
          <td><%= member.email %></td>
          <td><%= link_to "削除", @member, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>