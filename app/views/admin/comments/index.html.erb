<h3>コメント一覧</h3>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>日時</th>
      <th>コメントされた人</th>
      <th>コメントした人</th>
      <th>コメント</th>
    </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
  <tr>
    <td><%= comment.created_at %></td>
    <td><%= comment.task.member.nickname %></td>
    <td><%= comment.member.nickname %></td>
    <td><%= comment.comment_text %></td>
  </tr>

  <% end %>
  </table>



