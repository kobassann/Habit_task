<div class="container my-5">
  <div class="text-center">
    <h3>コメント一覧</h3>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>日時</th>
            <th>コメントされた人</th>
            <th>コメントした人</th>
            <th>コメント</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.task.start_time.strftime("%m月%d日 %H:%M") %></td>
          <td><%= comment.task.member.nickname %></td>
          <td><%= comment.member.nickname %></td>
          <td><%= comment.comment_text %></td>
          <td><%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @comments %>
    </div>
  </div>
</div>



